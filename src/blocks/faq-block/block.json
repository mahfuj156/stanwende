{
  "apiVersion": 3,
  "name": "zero/faq-block",
  "title": "SWende FAQ Accordion",
  "category": "widgets",
  "icon": {
    "src": "fa-regular fa-circle-question"
  },
  "description": "Frequently Asked Questions block with accordion.",
  "supports": {
    "html": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Veelgestelde vragen"
    },
    "items": {
      "type": "array",
      "default": []
    },
    "buttonText": {
      "type": "string",
      "default": "Bekijk alle vragen"
    },
    "buttonUrl": {
      "type": "string",
      "default": "#"
    },
    "buttonText2": {
      "type": "string",
      "default": "Bekijk alle vragen"
    },
    "buttonUrl2": {
      "type": "string",
      "default": "#"
    },

    "clientName": {
      "type": "string",
      "default": "Alex de Vries"
    },
    "clientImage": {
      "type": "object",
      "default": {
        "url": "",
        "alt": ""
      }
    },

    "sectionClass": {
      "type": "string",
      "default": "container mx-auto py-10 bg-white rounded-xl shadow-sm"
    },

    "sectionColor": {
      "type": "string",
      "default": ""
    },

    "paddingTop": {
      "type": "number",
      "default": 6
    },
    "paddingBottom": {
      "type": "number",
      "default": 6
    },
    "sectionMarginTop": {
      "type": "string",
      "default": "0"
    },
    "maxContainerWidth": {
      "type": "number",
      "default": 768
    },

    "columns": {
      "type": "number",
      "default": 3
    },
      "clientLayout": {
        "type": "string",
        "default": "stacked",
        "enum": ["stacked", "inline"]
    }
  },

  "editorScript": "ztb-blocks-js",
  "editorStyle": "ztb-blocks-css",
  "style": "ztb-blocks-css",
  "render": "file:./render.php"
}
